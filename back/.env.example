# Ghiblify Backend Environment Configuration

# Application Settings (IMPORTANT: Set to production for server deployment)
ENVIRONMENT=production
PORT=8000
FRONTEND_URL=https://ghiblify.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://ghiblify_user:your_password@localhost:5432/ghiblify

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# API Keys (Add your actual keys in production .env)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Security
SECRET_KEY=your_super_secret_key_here

# Logging
LOG_LEVEL=INFO
